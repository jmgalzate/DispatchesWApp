{% extends 'base.html.twig' %}

{% block title %}PÃ¡gina de Inicio{% endblock %}

{% block body %}

    <div class="p-5 mb-4 bg-light rounded-3">
        <div class="container-fluid py-5">
            <h1 class="display-5 fw-bold">{{ title }}</h1>
        </div>
    </div>

    <div class="row align-items-md-stretch" style="padding-left: 2%; padding-right: 2%;">
        <div class="col-md-5">
            <div class="h-100 p-5 text-white bg-dark rounded-3">
                <h2>Recursos cargados</h2>
                <button class="btn btn-primary"
                        onclick="window.location.href = '{{ path('get_all_products') }}'"
                        {% if app.session.get('keyagent') is null %} disabled {% endif %}>
                    <i class="bi bi-truck"></i> {{ loadProductsButton }}
                </button>
                <br><br>
                <h4>Estado de la carga:</h4>
                {% if app.session.get('products') is not null %}
                    {% set products = app.session.get('products') %}
                    <p>Se han cargado {{ products|length }} productos.</p>
                {% else %}
                    <p>No se han cargado productos.</p>
                {% endif %}
            </div>
        </div>
        <div class="col-md-7">
            <div class="h-100 p-5 bg-light border rounded-3">
                <h2>Despachos Efectuados</h2>
                <button class="btn btn-primary"
                        onclick="window.location.href = '{{ path('home_delivery') }}'"
                        {% if app.session.get('keyagent') is null %} disabled {% endif %}>
                    <i class="bi bi-truck"></i> {{ dispatchButton }}
                </button>
                <br><br>
                <h4>Despachos de este mes:</h4>
            </div>
        </div>
    </div>
{% endblock %}